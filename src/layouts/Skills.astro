---
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE, SKILLS } from "@config";


---

<Layout title={`Skills | ${SITE.title}`}>
  <Header activeNav="skills" />
  <Main pageTitle="Skills">

    {
      SKILLS.map(category => (
        <h2 class="text-2xl text-skin-accent font-semibold">{category.name}</h2>
        <div class="mt-2 mb-4 pr-32">
          {
            category.skills.map(skill => (
              <span class="mr-1  mb-1 inline-flex items-center rounded-md bg-gray-400/10 px-2 py-1 text-xs font-medium text-gray-400 ring-1 ring-inset ring-gray-400/20">{skill.name}</span>
            ))
          }
          

        </div>

      ))
    }
    
  </Main>

  <Footer />
</Layout>

<style>
  .skills {
    @apply text-lg;
  }
</style>
