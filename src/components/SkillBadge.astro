---
export interface Props {
  skill: string;
  extra?: string;
}

const { skill, extra } = Astro.props;
---


<div class='skill-badge'>
  <span class='tooltip'>{extra}</span>
  {skill}
</div>


<style>
  .skill-badge {
    @apply mr-1.5 mt-2 inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset;
  }
  html[data-theme="dark"] .skill-badge {
    @apply bg-slate-400/10 text-slate-400 ring-slate-400/20;
  }

  html[data-theme="light"] .skill-badge {
    @apply bg-slate-700/10 text-slate-700 ring-slate-700/20;
  }
  .skill-badge:hover .tooltip {
  @apply visible z-50;
}
  .tooltip {
  @apply invisible absolute rounded-md px-2 py-1 text-xs font-medium text-skin-accent bg-skin-fill -mt-8;
  }
</style>

