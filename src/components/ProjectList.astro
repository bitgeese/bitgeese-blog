---
import { PROJECTS } from "@config";
---

<div class="grid grid-cols-1 gap-4">
  {
    PROJECTS.map(project => (
      <a
        href={project.link}
        target="_blank"
        class="group block w-full max-w-3xl flex items-center space-x-3"
      >
        <div class="flex-shrink-0">
          <img
            class="h-24 w-36 object-cover rounded-md"
            src={project.image}
            alt={project.image_alt}
          />
        </div>
        <div class="min-w-0 flex-1">
          <div class="">
            <p class="text-lg font-medium text-skin-accent">{project.name}</p>
            <p class="text-sm group-hover:text-skin-accent max-w-md">
              {project.description}
            </p>
          </div>
        </div>
        <p class="text-xs font-semibold group-hover:text-skin-accent">
          {project.year}
        </p>
      </a>
    ))
  }
</div>
